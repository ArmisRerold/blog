<h2>Lista de postagens</h2>
<a href="/admin/postagens/add"><button class="btn btn-success mt-4">Nova Postagem</button></a>
<hr>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4> {{titulo}} </h4>
        <p>Descrição: {{descricao}} </p>
        <small>Data: {{date}} </small><br>
        <small>Categoria: {{categoria.nome}} </small>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">editar</button></a>
    </div>
</div>
{{else}}
<h4>Nenhuma postagem</h4>
{{/each}}