{{#each erros}}
<div class="alert alert-danger">
{{texto}}
</div>
{{else}}
{{/each}}
<h3>Editar Categoria</h3>
<div class="card">
    <div class="card-body">
        {{cat}}
        <form action="/admin/categorias/save/" method="post">
        
            <label for="nome">Nome: </label>
            <input name="id" type="hidden" value="{{categoria._id}}">
            <input class="form-control" type="text" name="nome" id="nome" value={{categoria.nome}}>
            <label for="slug">Slug: </label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="slug da categoria" value="{{categoria.slug}}">
            <br>
            <input type="submit" class="btn btn-success" value="Editar categoria">
        </form>
    </div>
</div>