{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
    {{else}}
   
{{/each}}
<div class="card">
    <div class="card-body">
        <h3>Editar postagem</h3>
        <form action="/admin/postagens/edit" method="post">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="descricao">Descrição: </label>
            <textarea name="descricao" class="form-control" id="descricao" cols="15" rows="10"> {{postagem.descricao}} </textarea>
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" id="conteudo" cols="30" rows="10"> {{postagem.conteudo}} </textarea>
            <label for="categoria">Categoria: </label>
            <select class="form-select" name="categoria" id="categoria">
                {{#each categorias}}
                <option value="{{_id}}"> {{nome}} </option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select> 
            <input class="btn btn-success mt-4" type="submit" value="editar postagem">
            
        </form>
    </div>
</div>